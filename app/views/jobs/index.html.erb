<h1>Listing jobs</h1>

<table>
	<tr>
		<th>Videos</th>
		<th>Tags</th>
		<th>Funding</th>
		<th></th>
	</tr>

	<% @jobs.each do |job| %>
		<tr class="active<%= job.active %>">
			<td><%= job.video_names.join(", ") %></td>
			<td><%= job.tag_names.join(", ") %></td>
			<td><%= job.spent %> / <%= job.budget%></td>
			<% if current_user.kind == "admin" %>
				<td><%= link_to 'Edit', edit_job_path(job) %></td>
			<% else %>
			  <td><%= link_to 'Work', "/jobs/#{job.id}/work" %></td>
			<% end %>
		</tr>
	<% end %>
</table>

<br />

<%= link_to 'New Job', new_job_path %>
