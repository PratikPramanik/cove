<!DOCTYPE html>
<html>
<head>
  <title>Cove</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery.js" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "/jwplayer/jwplayer.js"%>
  <%= javascript_include_tag "coveTag.js"%>  
  <%= csrf_meta_tag %>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <% if current_user %>
    <p>Current user: <%= current_user.email %></p>
    <p>Current user kind: <%= current_user.kind %></p>
    <nav>
      <ul>
        <li><%= link_to "Jobs", :jobs %></li>
        <li><%= link_to "Codes", :codes%></li>
      </ul>
    </nav>
  <% end %>

<%= yield %>

</body>
</html>
